<!--pages/Center/Center.wxml-->
<view class="page">
  <view class="container">
  <van-image
    class="image"
    width="100%"
    height="10rem"
    fit="cover"
    src="https://source.unsplash.com/random"
  />
  <van-image
    class="avatar"
    round
    width="5rem"
    height="5rem"
    src="{{userInfo.avatarUrl}}"
  />
  </view>
  <van-cell-group>
    <van-cell title="学号" value="518021910515" />
    <van-cell title="姓名" value="许嘉琦" />
    <van-cell title="导师" value="任锐" />
    <van-cell title="项目名称" value="毕业答辩管理系统设计" />
    <van-cell title="用户手册" is-link />
  </van-cell-group>
  <view class="button">
    <van-button bindtap="logout" type="danger" size="large">注销用户</van-button>
  </view>
  <view>
    <van-tabbar active="{{ active }}" bind:change="onChange">
      <van-tabbar-item name="home" icon="home-o">首页</van-tabbar-item>
      <van-tabbar-item wx:if="{{user.auth}}" name="procedure" icon="todo-list-o">流程</van-tabbar-item>
      <van-tabbar-item wx:if="{{!user.auth}}" name="studentFinished" icon="todo-list-o">学生流程</van-tabbar-item>
      <van-tabbar-item name="QA" icon="question-o" info="20">答疑</van-tabbar-item>
      <van-tabbar-item name="myprofile" icon="user-o" >我的</van-tabbar-item>
      
    </van-tabbar>
  </view>

</view>
