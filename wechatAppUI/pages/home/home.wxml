<!--index.wxml-->
<view class="container">
  <view class="searchBar" style="width:100%"> 
    <van-search
      model:value="{{ searchValue }}"
      placeholder="快速搜索通知"
      bind:search="onSearch"
    />
  </view>
  <view class="common-app" style="width:100%">
    <van-cell-group>
      <van-cell title="常用功能" size="large" />
      <van-grid wx:if="{{ !app.globalData.user.auth }}">
        <van-grid-item 
          wx:for="{{ teacherCommonAPPs }}" 
          icon="{{ item.icon }}" 
          text="{{ item.text }}" 
          link-type="navigateTo" 
          url="{{ item.url }}" 
        />
      </van-grid>
      <van-grid wx:else>
        <van-grid-item 
          wx:for="{{ studentCommonAPPs }}" 
          icon="{{ item.icon }}" 
          text="{{ item.text }}" 
          link-type="navigateTo" 
          url="{{ item.url }}" 
        />
      </van-grid>
    </van-cell-group>
  </view>
  <view class="school-notice" style="width:100%">
    <van-cell-group>
      <van-cell title="校内公告" size="large" value="更多" is-link url="/pages/notices/notices?type=0" />
      <van-cell
        wx:for="{{ schoolNotices }}" 
        title="{{ item.title }}" 
        is-link url="/pages/noticeDetail/noticeDetail?type=0&id={{ item.id }}" 
      />
    </van-cell-group>
  </view>
    <view class="dept-notice" style="width:100%">
    <van-cell-group>
      <van-cell title="院内公告" size="large" value="更多" is-link url="/pages/notices/notices?type=1" />
      <van-cell
        wx:for="{{  deptNotices }}" 
        title="{{ item.title }}" 
        is-link url="/pages/noticeDetail/noticeDetail?type=1&id={{ item.id }}" 
      />
    </van-cell-group>
  </view>
  <view class="teacher-message" style="width:100%">
    <van-cell-group>
      <van-cell title="导师消息" size="large"  value="更多" is-link url="/pages/notices/notices?type=2"  />
      <van-cell wx:if="{{app.globalData.user.auth}}" wx:for="{{ teacherMessages }}" title="{{ item.title }}" is-link url="/pages/noticeDetail/noticeDetail?type=2&id={{ item.id }}"  >
        <van-tag wx:if="{{!item.is_read}}" type="danger">未读</van-tag>
      </van-cell>
      <van-cell 
        wx:if="{{!app.globalData.user.auth}}" 
        wx:for="{{ teacherMessages }}" 
        title="{{ item.title }}"
        value="未读 {{item.unread}} 已读 {{item.read}}"
        is-link url="/pages/reading/reading?id={{ item.id }}"  
      />
    </van-cell-group>
  </view>
  <view class="sys-message" style="width:100%">
    <van-cell-group>
      <van-cell title="系统消息" size="large"  value="更多" is-link url="/pages/notices/notices?type=3"  />
      <van-cell wx:for="{{ sysMessages }}" title="{{ item.title }}" is-link url="/pages/noticeDetail/noticeDetail?type=3&id={{ item.id }}" >
        <van-tag wx:if="{{!item.is_read}}" type="danger">未读</van-tag>
      </van-cell>
    </van-cell-group>
  </view>
  <view>
    <van-tabbar active="{{ active }}" bind:change="onChange">
      <van-tabbar-item name="home" icon="home-o">首页</van-tabbar-item>
      <van-tabbar-item wx:if="{{app.globalData.user.auth}}" name="procedure" icon="todo-list-o">流程</van-tabbar-item>
      <van-tabbar-item wx:if="{{!app.globalData.user.auth}}" name="studentFinished" icon="todo-list-o">学生流程</van-tabbar-item>
      <van-tabbar-item name="QA" icon="question-o" info="20">答疑</van-tabbar-item>
      <van-tabbar-item name="myprofile" icon="user-o" >我的</van-tabbar-item>
      
    </van-tabbar>
  </view>
</view>

