<!--pages/notices/notices.wxml-->
<view class="page">
    <view>
        <wux-white-space size="default" />
        <wux-wing-blank wx:if="{{type==0}}" size="default">
            <wux-card wx:for="{{ notices }}" wx:key="id" bindtap="detail" data-id="{{item.id}}" title="{{item.title}}">
            <view slot="body">{{item.time}}</view>
            </wux-card>
        </wux-wing-blank>
        <wux-wing-blank wx:if="{{type==1}}" size="default">
            <wux-card wx:for="{{ notices }}" wx:key="id" bindtap="detail" data-id="{{item.id}}" title="{{item.title}}" >
            <view slot="body">{{item.time}}</view>
            </wux-card>
        </wux-wing-blank>
        <wux-wing-blank wx:if="{{type==2 && !auth}}" size="default">
            <wux-card wx:for="{{ notices }}" wx:key="id" bindtap="detail" data-id="{{item.id}}" data-reading_id="{{item.reading_id}}" title="{{item.title}}">
                <view slot="body">{{item.teachername}} {{item.time}}</view>
                <view wx:if="{{!item.isread}}" slot="footer"><van-tag type="danger">未读</van-tag></view>
            </wux-card>
        </wux-wing-blank>
        <wux-wing-blank wx:if="{{type==2 && auth}}" size="default">
            <wux-card wx:for="{{ notices }}" wx:key="id" bindtap="detail" data-id="{{item.id}}" title="{{item.title}}" >
                <view slot="body">{{item.time}}</view>
                <view slot="footer">未读 {{item.unread}} 已读 {{item.reading}}</view>
            </wux-card>
        </wux-wing-blank>
    </view>
</view>
