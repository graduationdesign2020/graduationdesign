/* pages/noticeDetail/noticeDetail.wxss */
.page__detail{
  display: block;
  width: 19rem;
  margin:0 auto;
  background-color: #fff;
  margin-top:0.4rem;
}

.detail__title{
  font-size:36rpx;
  line-height: 50rpx;
  font-weight: 400;
  word-break:break-word;
  width: 100%;
  text-align: center;
}

.article__desc{
  margin: 30rpx 0;
  display: flex;
}

.article__teacher{
  font-size: 25rpx;
  margin-left: 220px;
}

.article__time{
  font-size: 25rpx;
}

.article__content{
  font-size: 32rpx;
  color: #333;
  line-height: 42rpx;
  word-break: break-all;
  text-indent: 2em;
}

.detail__relation{
  margin-top: 60rpx;
  padding-bottom: 30rpx;
}
.relation__title{
  border-left: 6rpx solid #d81e06;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
}